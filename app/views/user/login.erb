<div class="container">
  <div class="row">
    <div class="col-lg-3">
      
    </div>
    <div class="col-12 col-lg-6">
      <h1>로그인</h1>
      <form action="/user/login_process" method = "post">
        <div class="form-group">
          <label for="exampleDropdownFormEmail2">아이디</label>
          <input type="email" name = "email" class="form-control" id="exampleDropdownFormEmail2" placeholder="email@example.com">
        </div>
        <div class="form-group">
          <label for="exampleDropdownFormPassword2">비밀번호</label>
          <input type="password" name = "password" class="form-control" id="exampleDropdownFormPassword2" placeholder="Password">
        </div>
        <input type="hidden" name = "authenticity_token" value = "<%= form_authenticity_token %>">
        <button type="submit" class="btn btn-primary">로그인</button>
      </form> 
    </div>
    <div class="col-lg-3">
      
    </div>
  </div>
</div>

